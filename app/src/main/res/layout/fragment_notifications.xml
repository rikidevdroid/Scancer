<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.NotificationsFragment">

    <LinearLayout
        android:id="@+id/top_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="12">

        <LinearLayout
            style="@style/parent"
            android:background="@drawable/login_shape_bk"
            android:orientation="vertical"
            android:layout_weight="3">

            <ImageView
                style="@style/parent"
                android:background="@drawable/ic_login_bk"
                android:contentDescription="login background" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:src="@drawable/user"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintVertical_bias="0.17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/exit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/log_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="خروج"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/exit"
        app:layout_constraintStart_toStartOf="@id/exit"
        app:layout_constraintTop_toBottomOf="@id/exit"
        />

    <ImageView
        android:id="@+id/name_logo"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.93"
        style="@style/profileDetailsImage"
        android:src="@drawable/ic_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/profile_name"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/name_logo"
        app:layout_constraintBottom_toBottomOf="@id/name_logo"
        app:layout_constraintTop_toTopOf="@id/name_logo"
        style="@style/profileDetailsTextMain"
        android:text="نام"/>
    <TextView
        android:layout_marginRight="2dp"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="@id/profile_name"
        app:layout_constraintEnd_toEndOf="@id/profile_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        style="@style/profileDetailsMiniText"
        android:text="سید امیرحسن موسوی"/>

    <ImageView
        android:id="@+id/email_logo"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintHorizontal_bias="0.93"
        style="@style/profileDetailsImage"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/profile_email"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/email_logo"
        app:layout_constraintBottom_toBottomOf="@id/email_logo"
        app:layout_constraintTop_toTopOf="@id/email_logo"
        style="@style/profileDetailsTextMain"
        android:text="ایمیل"/>
    <TextView
        android:layout_marginRight="2dp"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="@id/profile_email"
        app:layout_constraintEnd_toEndOf="@id/profile_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_email"
        style="@style/profileDetailsMiniText"
        android:text="sah1375@gmail.com"/>

    <ImageView
        android:id="@+id/mobile_logo"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.93"
        style="@style/profileDetailsImage"
        android:src="@drawable/ic_mobile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/profile_mobile"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/mobile_logo"
        app:layout_constraintBottom_toBottomOf="@id/mobile_logo"
        app:layout_constraintTop_toTopOf="@id/mobile_logo"
        style="@style/profileDetailsTextMain"
        android:text="تلفن همراه"/>
    <TextView
        android:layout_marginRight="2dp"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="@id/profile_mobile"
        app:layout_constraintEnd_toEndOf="@id/profile_mobile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_mobile"
        style="@style/profileDetailsMiniText"
        android:text="09121234567"/>


</androidx.constraintlayout.widget.ConstraintLayout>